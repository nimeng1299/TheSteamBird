                                    <Run>等级 </Run>
                                    <Run x:Name="level">0</Run>
                                    <Run>/ </Run>
                                    </TextBlock>
                                    <TextBlock Opacity="0.6" Style="{StaticResource SubtitleTextBlockStyle}" Foreground="White" Text=" 90"/>
