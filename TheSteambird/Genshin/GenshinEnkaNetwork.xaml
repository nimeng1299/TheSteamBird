                    <ProgressRing x:Name="progressRing" IsActive="False" Margin="10,0"/>
                    <Button x:Name="getData" Content="获取数据" Click="getData_Click"/>
                </StackPanel>
            </Grid>
            <ListView x:Name="AvatarList" ItemsSource="{x:Bind icons}" IsItemClickEnabled="True" ItemClick="ListView_ItemClick">
