                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="accountCombo" Grid.ColumnSpan="2" ItemsSource="{x:Bind genshinAccounts}" DisplayMemberPath="Uid" SelectionChanged="accountCombo_SelectionChanged"/>
